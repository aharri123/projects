#include <iostream>
#include <fstream>
#include <iomanip>
using namespace std;
 
double getaverage(double ar1[],int size);
int gethighest(double ar1[], int size);
 
//get highest array index to find the student with highest total//
int gethighest(double ar1[], int size)
{
  double highesttotal = ar1[0];
  int highestindex;
 
  for (int i = 0; i<size; i++)
    {
      if(ar1[i] > highesttotal)
    {
      highesttotal = ar1[i];
      highestindex = i;
    }
    }
      return highestindex;
}
 
 
 
 
 
double getaverage(double ar1[],int size)
{
  double average;
  double total = 0;
 
  for(int i = 0; i <size; i++)
    {
      total = total + ar1[i];
    }
  average = total/ size;
 
  return average;
}
 
 
 
int main()
{
  ifstream inputfile;
  int const SIZE = 15;
  string firstname[SIZE];
  string lastname[SIZE];
  int hwscore[SIZE];
  int quizscore[SIZE];
  int labscore[SIZE];
  int midtermscore[SIZE];
  int finalscore[SIZE];
  double totalscore[SIZE];
  string symbol[SIZE];
  // int highestindexinsert;
  //  int highestindex2 = gethighest(totalscore, SIZE);
 
 
 
 
  inputfile.open("gradebook.txt");
 
  //inputing first and last names, hw scores, quiz scores, lab scores, midterm scores, and final score into appropiate arrays//
 
  if (inputfile)
    {
      for (int i =0; i <SIZE; i++)
    {
      inputfile>>firstname[i]>>lastname[i]>>hwscore[i]>>quizscore[i]>>midtermscore[i]>>finalscore[i];
    }
    }
 
  //storing total scores in totalscore array by adding up all totals for i'th student//
  for (int i = 0; i <SIZE; i++)
 
    {
      totalscore[i] = (hwscore[i]*0.2)+ (quizscore[i]* 0.1)+ (labscore[i]*0.1)+(midtermscore[i]* 0.3)+ (finalscore[i]*0.3);
    }
  //calculating letter symbol by using if else statements//
 
  for (int i = 0; i <SIZE; i++)
    {
      if (totalscore[i] >= 90 || totalscore[i] <= 100)
    {
      symbol[i] = 'A';
    }
      else if (totalscore[i] >= 80)
    {
      symbol[i] = 'B';
    }
      else if (totalscore[i] >=70)
    {
      symbol[i] = 'C';
    }
      else if (totalscore[i] >= 60)
    {
      symbol[i] = 'D';
    }
      else symbol[i] = 'F';
    }
 
  cout<<"The average of the total grades was "<<getaverage(totalscore, SIZE)<<endl;
 
  cout<<"The highest total score belonged to "<<gethighest(totalscore, SIZE)<<endl;
 
 
 
  inputfile.close();
 
    return 0;
}
